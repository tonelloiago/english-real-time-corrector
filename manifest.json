{
    "manifest_version": 3,
    "name": "English Realtime Corrector",
    "version": "1.0",
    "description": "Corrects English in real-time using the OpenAI API (with your token).",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "bubble.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}